#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int a,i,y;
    scanf("%d %d %d",&a,&i,&y);
    float intrest=(a*i*y)/100;
    float amount=a+intrest;
    float discount=intrest*2/100;
    float final=a+intrest-discount;
    printf("%.2f\n",intrest);
    printf("%.2f\n",amount);
    printf("%.2f\n",discount);
    printf("%.2f\n",final);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
